@model AdminDashboardViewModel

<h2>Admin Dashboard</h2>

<!-- Load Product Management as a Partial View -->
@await Html.PartialAsync("_ManageProducts", Model.Products)

<!-- Load Order Management as a Partial View -->
@await Html.PartialAsync("_ManageOrders", Model.Orders)

<!-- Order Management -->
<h3>Recent Orders</h3>
<table class="table">
    <thead>
        <tr><th>Order ID</th><th>Customer</th><th>Total Price</th><th>Status</th></tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerName</td>
                <td>$@order.TotalPrice</td>
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>
