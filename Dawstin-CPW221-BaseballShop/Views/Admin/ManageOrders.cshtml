@model IEnumerable<Order>
<h2>Manage Orders</h2>

<table class="table">
    <thead>
        <tr><th>Order ID</th><th>Customer</th><th>Total Price</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerName</td>
                <td>$@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="UpdateOrderStatus" asp-controller="Admin" asp-route-id="@order.OrderID" class="btn btn-primary">Update Status</a>
                    <a asp-action="DeleteOrder" asp-controller="Admin" asp-route-id="@order.OrderID" class="btn btn-danger">Cancel Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>
