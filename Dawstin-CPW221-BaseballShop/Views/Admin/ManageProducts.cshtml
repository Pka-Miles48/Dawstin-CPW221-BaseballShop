@model IEnumerable<Product>
<h2>Manage Products</h2>

<a asp-action="AddProduct" asp-controller="Admin" class="btn btn-success">Add New Product</a>

<table class="table">
    <thead>
        <tr><th>ID</th><th>Name</th><th>Price</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.Name</td>
                <td>$@product.Price</td>
                <td>
                    <a asp-action="EditProduct" asp-controller="Admin" asp-route-id="@product.ProductID" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteProduct" asp-controller="Admin" asp-route-id="@product.ProductID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
