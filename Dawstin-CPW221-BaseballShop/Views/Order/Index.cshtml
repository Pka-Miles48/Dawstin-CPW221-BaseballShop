@model IEnumerable<Dawstin_CPW221_BaseballShop.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Your Orders</h1>

@if (Model != null && Model.Any())
{
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Total Amount</th>
                    <th>Order Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
                        <tr>
                            <td>@order.OrderID</td>
                            <td>@order.TotalAmount.ToString("C")</td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-orderId="@order.OrderID" class="btn btn-info">View Details</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <p>You haven't placed any orders yet.</p>
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
}
